<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title><%=@title %></title>
  <style id="applicationStylesheet" type="text/css">
    html {
      -webkit-print-color-adjust: exact;
    }

    body {
      zoom: 50%;
      padding: 5;
      display: flex;
      flex-direction: column;
      font-family: Arial;
      font-style: normal;
      font-weight: normal;
      font-size: 23px;
      margin-left: 1.5%;
      margin-right: 1.5%;
    }

    .labelText {
      font-family: Arial;
      font-style: normal;
      font-weight: normal;
      font-size: 21.8px;
      color: rgba(51, 51, 51, 1);
    }

    .infoText {
      font-family: Arial;
      font-style: normal;
      font-weight: normal;
      font-size: 21.8px;
      color: rgba(85, 85, 85, 1);
      display: flex;
    }

    #infoBox {
      margin-bottom: 10px;
    }

    #barra_proposta {
      height: 49.3px;
      background-color: rgba(222, 229, 236, 1);
      width: 100%;
      display: flex;
      margin-top: 21px;
    }

    #titulo_proposta {
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: left;
      font-family: Arial;
      font-style: normal;
      font-weight: normal;
      font-size: 23px;
      color: rgba(51, 51, 51, 1);
      padding-left: 6px;
    }

    #infoColumns {
      display: flex;
      flex-direction: row;
    }

    .column {
      display: flex;
      flex: 1;
      flex-direction: column;
    }

    .row {
      display: flex;
      flex-direction: row;
    }

    .labelBox {
      display: flex;
      width: 27%;
    }

    .labelSpacing {
      margin-top: 11.73px;
      margin-bottom: 5.5px;
    }

    #infoText {
      display: flex;
    }

    .productLabelText {
      font-family: Arial;
      font-style: normal;
      font-weight: normal;
      font-size: 21.8px;
      color: rgba(255, 255, 255, 1);
    }

    .productLabelTextRight {
      font-family: Arial;
      font-style: normal;
      font-weight: normal;
      font-size: 21.8px;
      color: rgba(255, 255, 255, 1);
    }

    .productText {
      font-family: Arial;
      font-style: normal;
      font-weight: normal;
      font-size: 23px;
      color: rgba(85, 85, 85, 1);
      text-align: left;
    }

    .itemSpacing {
      padding-left: 6px;
      padding-right: 6px;
    }

    .subTotalSpacing {
      padding-bottom: 18px;
      font-size: 21.8px;
    }

    .indice {
      width: 3%;
    }

    .produto {
      width: 38.5%;
    }

    .quantidade {
      width: 11.5%;
    }

    .valorSemIpi {
      width: 13.05%;
    }

    .ipi {
      width: 3.75%;
    }

    .valorVenda {
      width: 14.80%;
    }

    .valorDesconto {
      width: 18.12%;
    }

    .produto2 {
      width: 22.49%;
    }

    .descricao {
      width: 21.94%;
    }

    .embalagem {
      width: 11.2%;
    }

    .altura {
      width: 6.5%;
    }

    .largura {
      width: 8.3%;
    }

    .comprimento {
      width: 11.83%;
    }

    .ncm {
      width: 10.34%;
    }

    .peso {
      width: 7.4%;
    }

    .assinatura {
      border-top: 1px solid;
      padding-top: 15px;
      font-size: 20px;
      margin-left: 200px;
      margin-right: 200px;
      margin-bottom: 0px;
      font-weight: bold;
      page-break-inside: avoid
    }

    .subassinatura {
      font-size: 18px;
      margin-top: 5px;
      page-break-inside: avoid
    }
